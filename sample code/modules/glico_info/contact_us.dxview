<div data-options="dxView : { name: 'contact_us', title: 'CONTACT US', disableCache: true } ">
    <div data-options="dxContent : { targetPlaceholder: 'content' } " class="dx-content-background">
        <div data-bind="dxToolbar: { dataSource: toolbarItems }"></div>

        <div data-bind="dxLoadPanel:{
            message: 'Sending...',
            visible: loadPanelVisible
        }"></div>

        <div data-bind="dxScrollView: { height: function() { return $(window).height() * 0.9 } }">

            <div class="card">
                <h3 class="card-header primary-color white-text">Send Us a Message using this form</h3>
                <div class="card-body">
                    <div style="padding: 10px">
                        <span>E-Mail</span>
                        <div data-bind="dxTextBox: { placeholder: 'Email', mode:'email', value: email }, dxValidator: emailValidationRules"></div>
                        <span>Message</span>
                        <div data-bind="dxTextArea: { placeholder: 'Content', value: msg }, dxValidator: msgValidationRules"></div>
                    </div>
                    <div class="centre">
                        <div data-bind="dxButton: { text: 'SEND MESSAGE', icon:'message', onClick: SendMail, useSubmitBehavior: true, type: 'success' }"></div>
                    </div>
                </div>
            </div>

            <div style="width:100%;">
                <div class="card">
                    <h3 class="card-header primary-color white-text">Customer Care</h3>
                    <div class="card-body">
                        <!--<h4 class="card-title">No.47, Kwame Nkrumah Avenue</h4>-->
                        <p class="card-text">
                            Telephone Head Office
                            +233 0302 246 142 / +233 0202 222 113
                            +233 0302 246 113-4
                        </p>
                        <p class="card-text">
                            Email
                            info@glicolife.com
                            Customerservices@glicogroup.com
                        </p>
                    </div>
                </div>
            </div>

